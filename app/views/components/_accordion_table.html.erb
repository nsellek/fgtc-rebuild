<div class="accordion" id="<%= accordion[:id].parameterize %>">
  <% accordion[:items].each.with_index do |item, i| %>
    <div class="accordion-item">
      <h2 class="accordion-header" id="<%= item[:title].parameterize %>">
        <button
          class="accordion-button <%= 'collapsed' unless i.zero? %>"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#<%= item[:title].parameterize %>-info"
          aria-expanded="<%= i.zero? %>"
          arua-controls="<%= item[:title].parameterize %>-info"
        >
          <span class="text-danger fw-bold"><%= item[:title] %></span>&#8203 <%= item[:duration] %>
        </button>
      </h2>
      <div
        id="<%= item[:title].parameterize %>-info"
        class="accordion-collapse collapse <%= 'show' if i.zero? %>"
        aria-labelledby="<%= item[:title].parameterize %>"
        data-bs-parent="#<%= accordion[:id].parameterize %>"
      >
        <div class="table-responsive accordion-body">
          <table class="table table-striped table-hovor caption-top">
            <caption><%= item[:caption] %></caption>
            <thead>
              <% item[:headers]&.each do |header| %>
                <th scope="col" colspan="<%= header[:colspan] %>"><%= header[:title] %></th>
              <% end %>
            </thead>
            <tbody>
              <% item[:rows]&.each do |row| %>
                <tr>
                  <% row.each.with_index do |data, j| %>
                    <% if j.zero? %>
                      <th scope="row"><%= data %></th>
                    <% else %>
                      <td><%= data %></td>
                    <% end %>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>