<div class="container">
  <div id="home-main-carousel" class="carousel slide" data-bs-ride="carousel">
    <ol class="carousel-indicators">
      <% images.size.times do |i| %>
        <li
          data-bs-target="#home-main-carousel"
          data-bs-slide-to="<%= i %>"
          class="<%= 'active' if i.zero? %>"
        ></li>
      <% end %>
    </ol>
    <div class="carousel-inner">
      <% images.each.with_index do |image, i| %>
        <div class="carousel-item <%= 'active' if i.zero? %>">
          <%= image_tag "carousel/#{image.split('/').last}",
                        class: 'd-block w-100'
          %>
        </div>
      <% end %>
    </div>
    <a href="#home-main-carousel" class="carousel-control-prev" role="button" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </a>
    <a href="#home-main-carousel" class="carousel-control-next" role="button" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </a>
  </div>
</div>
